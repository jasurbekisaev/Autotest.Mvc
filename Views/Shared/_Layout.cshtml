@using Autotest.Mvc.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject UsersService UsersService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Autotest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Autotest.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Autotest.Mvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        
                        @if (!UsersService.IsLoggedIn(Context))
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary text-info pos-right" asp-area="" asp-controller="Users" asp-action="SignUp">Sign Up</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light text-dark pos-right-2" asp-area="" asp-controller="Users" asp-action="SignIn">Sign In</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-light text-dark pos-right" asp-area="" asp-controller="Users" asp-action="Profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tickets" >Show Tickets</a>
                            </li>
                            /////
                            @*<div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Choose Language
                            </button>
                            <ul class="dropdown-menu">
                               <li><a class="dropdown-item" asp-controller="Users" asp-action="ChangeLanguage" asp-route-language="uz">Uzbek</a></li>
                               <li><a class="dropdown-item" asp-controller="Users" asp-action="ChangeLanguage" asp-route-language="uzc">Uzbek Kril</a></li>
                               <li><a class="dropdown-item" asp-controller="Users" asp-action="ChangeLanguage" asp-route-language="ru">Rus</a></li>
                            </ul>
                            </div>*@
                            ////
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
